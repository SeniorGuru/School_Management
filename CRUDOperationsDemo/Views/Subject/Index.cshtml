@model IEnumerable<CRUDOperationsDemo.Models.Subject>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
<head>
    <title>Attendance</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v5.15.4/css/all.css">
    <link href="../css/subject_list.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row fs-2">
            <div class="col-6">
                <div class="d-flex justify-content-end">
                    <span style="color: red;">New Subject:</span>
                </div>
            </div>
            <div class="col-6">
                <input type="text" id="subjectName" placeholder="Enter user name" />
            </div>
            <div class="col-6 mt-5">
                <div class="d-flex justify-content-end">
                    <span style="color: red;">Number of Classes Per Week:</span>
                </div>
            </div>
            <div class="col-6 mt-5">
                <div style="max-width: 400px;" >
                    <div>
                        <input id = "periodCount" type="text" />
                    </div>
                    <div class="d-flex justify-content-end mt-3">
                        <button id="btnSubjetCreate" type="button">CREATE</button>
                    </div>
                </div>
            </div>

            <div class="col-12 mt-5" style="min-height: 350px;">
                <div class="d-flex flex-wrap justify-content-between align-items-center">
                    @if(Model != null)
                        {
                            @foreach (var item in Model)
                            {
                               <div class="itemDiv">
                                    <div>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </div>
                                    <i class="fa fa-trash" id="@Html.DisplayFor(modelItem => item.Id)" onclick="onDeleteSubject(this)"  aria-hidden="true"></i>
                               </div>                            
                            }
                        }
                </div>
            </div>
        </div>
    </div>
</body>
        
}
