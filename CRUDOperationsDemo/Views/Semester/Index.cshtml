@{
<head>
  <title>Attendance</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="../css/take_attendance.css" rel="stylesheet" />
</head>
<body>
        <div class="container mt-5">
            <div class="row fs-2">
                <div class="col-12">
                    <div class="d-flex justify-content-center align-items-center">
                        <img src="../images/logo.png" />
                    </div>
                </div>
                <div class="col-5">
                    <div class="d-flex justify-content-end">
                        <span style="color: red;">Semester Name:</span>
                    </div>
                </div>
                <div class="col-7">
                    <input id = "semesterName" type="text" />
                </div>
                <div class="col-5 mt-3">
                    <div class="d-flex justify-content-end">
                        <span style="color: red;">Start Date:</span>
                    </div>
                </div>
                <div class="col-7 mt-3">
                    <input type="date" id = "semesterFromDate"/>
                </div>
                <div class="col-5 mt-3">
                    <div class="d-flex justify-content-end">
                        <span style="color: red;">End Date:</span>
                    </div>
                </div>
                <div class="col-7 mt-3">
                    <input type="date" id = "semesterEndDate"/>
                </div>
                <div class="col-5">

                </div>
                <div class="col-7 mt-3">
                    <button type="button" id ="btnCreateNewSemester">Create New Semester</button>
                </div>
            </div>
        </div>
</body>
}
