@model IEnumerable<CRUDOperationsDemo.Models.User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
<head>
    <title>Attendance</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v5.15.4/css/all.css">
    <link rel="stylesheet" href="../css/teacher_list.css" />
</head>
<body>
    <div class="d-flex justify-content-end" style="padding-right: 50px;"> 
        <div class="labelDiv">
            Teacher List
        </div>
    </div>
    <div class="container mt-5">
        <div class="row fs-2">
            <div class="col-3">
                <div class="d-flex justify-content-end">
                    <span style="color: red;">New Teacher:</span>
                </div>
            </div>
            <div class="col-9">
                <input id="tTitle" type="text" placeholder="Title" /><br/>
                <input id="tFirstName" type="text" placeholder="First Name" />
                <input id="tLastName" type="text" placeholder="Last Name" />
            </div>

            <div class="col-3 mt-3">
                <div class="d-flex justify-content-end">
                    <span style="color: red;">School Email:</span>
                </div>
            </div>
            <div class="col-9 mt-3">
                <input id="tEmail" type="email" placeholder="Enter Email" />
            </div>
            <div class="col-12 mt-3">
                <div class="d-flex justify-content-end">
                    <button id="btnCreateTeacher" type="button">CREATE</button>
                </div>
            </div>

            <div class="col-12" style="margin-top: 80px;">
                <div class="d-flex flex-wrap justify-content-center align-items-center">
                @if(Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <div class="itemDiv">
                                    <div>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                        @Html.DisplayFor(modelItem => item.LastName) 
                                    </div>
                                   <i class="fa fa-trash" id="@Html.DisplayFor(modelItem => item.Id)" aria-hidden="true"></i>
                               </div>                            
                            }
                        }
                </div>
            </div>
        </div>
    </div>
</body>
}
